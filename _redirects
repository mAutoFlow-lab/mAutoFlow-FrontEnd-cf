# exact redirects first (faster)
/pricing          /app/pricing           301
/terms-of-service /app/terms-of-service  301
/privacy-policy   /app/privacy-policy    301

# app routing
/app              /app/                  301
/app/*            /app/                  200

# allow static assets (DO NOT FALLBACK)
/assets/*         /assets/:splat         200

# share link should open app share viewer
/share/*          /app/share/:splat      302

# landing fallback
/*                /                      200

